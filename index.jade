- var tint = 'light';
- if(document.source.indexOf('dark') > 0){
- 	tint = 'dark';
- }
- var siteNav = [{url: 'http://topcoat.io', text: 'Home'},{url: '#', text: 'Usage Guidelines'},{url: 'http://bench.topcoat.io/', text: 'Benchmarks'},{url:'http://topcoat.io/blog',text:'Blog'}]
!!! 5
html
	head
		meta(charset = 'utf-8')
		meta('http-equiv' = 'X-UA-Compatible', content = 'IE=edge,chrome=1')
		title=project.title
		meta(name="viewport", content="user-scalable=no,initial-scale = 1.0,maximum-scale = 1.0")
		link(rel = 'stylesheet', type = 'text/css', href = document.relativeSource)
		link(rel = 'stylesheet', type = 'text/css', href = 'css/main.css')
		link(rel = 'stylesheet', type = 'text/css', href = 'css/brackets.css')
		script(src="//use.edgefonts.net/source-sans-pro:n3,n4,n6;source-code-pro:n3.js")
		script(src="js/rainbow-custom.min.js")
		script(src = 'js/main.js')
		//if lt IE 9
			script(src = '//html5shiv.googlecode.com/svn/trunk/html5.js')
	body(class=tint)
		#wrapper
			#sideNav
				nav.site: ul
					- each siteNavItem, i in siteNav
						- if(i == 1)
							li.selected: a(href=siteNavItem.url)=siteNavItem.text
						- else
							li: a(href=siteNavItem.url)=siteNavItem.text
				div.combo
					select.docNav
						- each item in nav
							- if(item.url == document.url)
								option(value=item.url, selected="selected")=item.title
							- else
								option(value=item.url)=item.title
				#pageNav: ul
					- each component in document.components
						li: a(href='#'+component.slug)=component.name
			#site
				header#main-header
					hgroup
						h1=project.title
						p CSS for clean and fast web apps
					nav
						ul
							- each siteNavItem, i in siteNav
								- if(i == 0)
									| <!-- home -->
								- else if(i == 1)
									li.selected: a(href=siteNavItem.url)=siteNavItem.text
								- else
									li: a(href=siteNavItem.url)=siteNavItem.text
						#download-btn Download version 0.3
					a#slide-menu-button.topcoat-icon-button--large--quiet
						span.topcoat-icon--large.topcoat-icon--menu-stack
				#content
					- each component in document.components
						article.component(id=component.slug)
							header
								h2=component.name
							section.component!=component.html
							footer
								div.showcode
									a(href="#") Show code snippets
								section.code
									div
										h3 HTML
										pre.html
											code(data-language="html")=component.html
									div
										h3 CSS
										pre.css
											code(data-language="css")=component.css
				footer